int ticksPerSecond = 60;
String mainMenuState = "main";
String imageIndex[] = {"menuBackground.png","loadButton.png","saveButton.png","newFileButton.png","settingsButton.png"}
PImage images[] = new PImage[imageIndex.length];
boolean clickEvent = false;

void setup(){
int t = 0;
while (t < images.length && imageIndex[t] != "") {
images[t] = loadImage(imageIndex[t])
t = t + 1
}
}

void mainMenu(){
  int buttonSize = 8
  image(images[0],0,0,width,height);
  int[] button1 = {images[1],width / buttonSize,height/buttonSize};
  if (mainMenuState == "main"){
    image(images[1],width / buttonSize,height/buttonSize,width / 2 - (width / buttonSize * 2),height/2 - (height / buttonSize * 2))
    image(images[1],width / buttonSize,height/buttonSize + height / 2,width / 2 - (width / buttonSize * 2),height/2 - (height / buttonSize * 2))
    image(images[1],width / buttonSize + width / 2,height/buttonSize,width / 2 - (width / buttonSize * 2),height/2 - (height / buttonSize * 2))
    image(images[1],width / buttonSize + width / 2,height/buttonSize + height / 2,width / 2 - (width / buttonSize * 2),height/2 - (height / buttonSize * 2))
    
  }
  
}


void main(){
  rect(0,0,width,height)
  if (mainMenuState == "main"){
    mainMenu()
  }
  
  ## End
  clickEvent = false;
  sleep(1000/ticksPerSecond)
}
void mouseClicked(){
  clickEvent = true;
}
